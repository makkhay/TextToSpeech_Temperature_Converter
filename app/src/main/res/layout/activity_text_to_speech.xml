<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.makkhay.texttospeech.TextToSpeech">

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioGrp"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/input"
        android:layout_alignStart="@+id/input"
        android:layout_marginTop="27dp">

        <RadioButton
            android:id="@+id/celButton"
            android:layout_width="158dp"
            android:layout_height="57dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="26dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="49dp"
            android:text="Farh 2 Cel" />

        <RadioButton
            android:id="@+id/farhButton"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_marginLeft="26dp"
            android:layout_marginStart="26dp"
            android:text="Cel 2 Farh"
            android:layout_above="@+id/input"
            android:layout_alignLeft="@+id/input"
            android:layout_alignStart="@+id/input" />


    </RadioGroup>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:text="Output"
        android:layout_below="@+id/input"
        android:layout_alignLeft="@+id/input"
        android:layout_alignStart="@+id/input" />

    <EditText
    android:id="@+id/input"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_below="@+id/radioGrp"
    android:layout_marginLeft="15dp"
    android:layout_marginStart="15dp"
    android:layout_marginTop="81dp"
    android:ems="10"
    android:hint="Enter your temperature"
    android:inputType="textPersonName" />

    <Button
        android:id="@+id/speechButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_marginTop="48dp"
        android:text="Speak" />

</RelativeLayout>
